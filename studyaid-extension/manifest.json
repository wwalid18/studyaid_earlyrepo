{
  "manifest_version": 3,
  "name": "Text Highlighter",
  "version": "1.1",
  "description": "Select text, click extension icon, and save or delete highlights.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}